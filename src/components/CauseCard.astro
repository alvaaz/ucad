---
const {img, title, description} = Astro.props
---

<div class="relative flex-shrink-0 basis-1/2">
  <img class="w-full h-48 object-cover rounded-lg" src={img} alt="">
  <div class="border rounded-lg border-gray-200 mx-auto w-11/12 -top-8 relative bg-white p-5">
    <h3 class="mb-4 uppercase text-violet-800 font-title text-xl text-left">{title}</h3>
    <p class="text-gray-500 text-sm text-left mb-4">{description}</p>
    <div>
      <p class="text-xs text-left text-gray-500 mb-2">Cenas: <span class="font-semibold">7.100</span></p>
    <div class="w-full bg-gray-200 h-2 rounded-lg mb-2">
      <div class="bg-[#E83771] h-2 rounded-lg" style="width: 45%"></div>
    </div>
    <p class="text-xs text-right text-gray-500">Meta: <span class="font-semibold">10.000</span></p>
    </div>
  </div>
</div>
